@{
    ViewBag.Title = "Information";
    ViewBag.HideNavbar = true;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <style>
        .text {
            float: left;
            width: 40%;
            box-sizing: border-box;
            padding-top: 100px;
            padding-left: 60px;
        }

        .pic {
            float: right;
            width: 50%;
            box-sizing: border-box;
            padding-top: 100px;
            padding-right: 30px;
        }

        .pic img {
            max-width: 100%;
            height: auto;
        }

        .button-container {
            padding-left: 40px;
            padding-bottom: 20px;
            text-align: center;
        }

        .clearfix::after {
            content: "";
            display: table;
            clear: both;
        }

        #newContent1 {
            display: flex;
            border: 1px solid #ccc;
            border-radius: 8px;
            overflow: hidden;
            margin-top: 700px;
            margin-bottom: 350px;
        }

        #newContent1 > div {
            flex: 1;
            padding: 20px;
            text-align: center;
            background-color: white;
        }

        #newContent1 h2, #newContent1 p {
            margin: 0;
        }
    </style>
</head>
<body>
    <div class="clearfix">
        <div class="text">
            <h1 style="color: black; font-size: 66px; font-family: Arial;">
                Transforming<br>
                climate<br>
                education<br>
                into adventures
            </h1>
            <p style="color:dimgray">Occaecat est ipsum reprehenderit reprehenderit veniam anim laborum est esse duis occaecat reprehenderit pariatur.</p>
        </div>

        <div class="pic">
            <img src="~/Media/Mom&Dad.png" alt="Placeholder Image">
        </div>
    </div>

    <div style="padding-left:90px;">
        <a href="#newContent1" style="color: dodgerblue; text-decoration: none;">Take a Tour</a>
    </div>

    <div id="newContent1">
        <!-- 2nd content -->
        <div>
            <h2>Part 1</h2>
            <p>This is the first part of the card.</p>
        </div>
        <div>
            <h2>Part 2</h2>
            <p>This is the second part of the card.</p>
        </div>
        <div>
            <h2>Part 3</h2>
            <p>This is the third part of the card.</p>
        </div>
    </div>

</body>
</html>

<script>
    document.querySelector('a[href="#newContent1"]').addEventListener('click', function (event) {
        event.preventDefault();
        document.getElementById('newContent1').scrollIntoView({ behavior: 'smooth' });
    });
</script>