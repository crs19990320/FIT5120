@{
    ViewBag.Title = "Home Page";
}
@model IEnumerable<MainProject.Models.QuestionTable>

<h1 style="text-align: center;">Come to Play!</h1>
<main style="position: relative; width: 80vw; height: 90vh; display:flex;">

    <!-- up-left -->
    <section class="card" style="position: absolute; top: 0; left: 0; width: 40%; height: 40%;">
        <h2 style="text-align: center;" id="leftTopTitle">Video</h2>
        <div style="border: none" id="videoContainer">
            <video controls style="width: 100%; height: 100%;" id="videoPlayer">
                <source src="https://videos.pexels.com/video-files/4884642/4884642-hd_1920_1080_30fps.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
    </section>

    <!-- up-right -->
    <section class="card" style="position: absolute; top: 0; right: 0; width: 40%; height: 40%;">
        <h2 style="text-align: center;" id="rightTopTitle">Map</h2>
        <div style="border: 1px solid black;">
            <img src="https://www.mapsland.com/maps/oceania/australia/large-australia-cartoon-map.jpg" alt="map" style="width: 100%; height: 100%;">
        </div>
    </section>

    <!-- below-left -->
    <section class="card" style="position: absolute; bottom: 0; left: 0; width: 40%; height: 40%;">
        <h2 style="text-align: center;" id="leftBottomTitle">Game</h2>
        <div style="border: 1px solid black; overflow: hidden;">
            <button id="test">
                <img src="https://developers.google.com/static/games/services/images/google-play-16-9.svg" alt="cardGame" style="width: 100%; height: 100%;">
            </button>
        </div>
    </section>

    <!-- below-right -->
    <section class="card" style="position: absolute; bottom: 0; right: 0; width: 40%; height: 40%;">
        <h2 style="text-align: center;" id="rightBottomTitle">Achievement</h2>
        <div style="border: 1px solid black;">
            <img src="https://t4.ftcdn.net/jpg/05/93/91/27/360_F_593912714_6pEIEP3YlFQkbwknHEYxQzbne5ZN6BlE.jpg" alt="achievement" style="width: 100%; height: 100%; object-fit: contain;">
        </div>
    </section>


    @*<div class="row">
            <button id="test">CardGame</button>
        </div>*@
    <style>
        .btn-custom {
            margin-left: 120px;
            background-color: blue;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 16px;
            text-decoration: none;
        }
    </style>

    <h1 style="text-align: left; margin-bottom: 20px;">
        <span>&#x1F984;</span> Hi! Alligator Hibiscus
    </h1>

    <main style="position: relative; width: 80vw; height: 90vh; display: flex;">

        <!-- Cards on the left -->
        <div style="width: 60%; display: flex; flex-direction: column; justify-content: space-between;">
            <h4>Your Weekly Activities</h4>
            <!-- Top-left card -->
            <section class="card" style="height: 200px; background-color: cyan; border: none;">
                <h2 style="text-align: left; margin-bottom: 10px; margin-left: 100px">Learn</h2>
                <div style="border: none;">
                    <p style="font-size: 30px;font-weight:bold; text-align: left; margin-left: 120px;">
                        This week, we're going on a  adventure to learn all about saving water.
                        <img src="~/Media/Learn.png" style="width: 20%; height: auto; float: right; margin-right:70px;" />
                    </p>
                    <button onclick="openVideoPopup()" class="btn btn-custom">Watch Video</button>
                </div>
            </section>

            <!-- Bottom-left cards -->
            <div style="display: flex; flex-direction: column; justify-content: space-between; height: 50%;">
                <!-- Bottom-left card 1 -->
                <section class="card" style="height: 200px; background-color: rgba(255, 255, 255, 0.5); border: solid">
                    <p style="font-size:30px ;font-weight:300; text-align: left; margin-bottom: 10px; margin-left:100px">Check your knowledge</p>
                    <div style="border: none;">
                        <p style="font-size: 30px;font-weight:bold; text-align: left; margin-left: 120px;">Card Game<img src="https://st2.depositphotos.com/1036149/12175/i/450/depositphotos_121752080-stock-photo-crocodile-holding-question-mark-and.jpg" style="width: 20%; height: auto; float: right; margin-right:70px;" /></p>
                        <button id="game" class="btn btn-custom"> Play </button>
                    </div>
                </section>

                <!-- Bottom-left card 2 -->
                <h4 style="margin-top: 20px; margin-bottom:20px;">Your Impact</h4>
                <section class="card" style="height: 200px; background-color: rgba(255, 255, 255, 0.5); border: solid">
                    <p style="font-size:30px ;font-weight:300; text-align: left; margin-bottom: 10px; margin-left:100px">How have you helped the climate?</p>
                    <div style="border: none;">
                        <p style="font-size: 30px;font-weight:bold; text-align: left; margin-left: 120px;">Climate Explorer<img src="https://static.vecteezy.com/system/resources/previews/001/237/406/original/world-kawaii-planet-earth-smiling-vector.jpg" style="width: 20%; height: auto; float: right; margin-right:70px;" /></p>
                        <a href="Map" class="btn btn-custom">Launch</a>
                    </div>
                </section>
            </div>
        </div>

        <!-- Card on the right -->
        <section class="card" style="width: 30%; background-color: rgba(255, 255, 255, 0.5); margin-left: auto; margin-top: 80px; border: solid;">
            <h2 style="text-align: left;" id="rightCardTitle">Checklist</h2>
            <div style="border: none;">
                <ul>
                    <li style="margin-bottom: 10px; font-size: medium"><input type="checkbox" id="task1" name="task1"><label for="task1">Turn off the tap while brushing teeth</label></li>
                    <li style="margin-bottom: 10px; font-size: medium"><input type="checkbox" id="task2" name="task2"><label for="task2">Task 2</label></li>
                    <li style="margin-bottom: 10px; font-size: medium"><input type="checkbox" id="task3" name="task3"><label for="task3">Task 3</label></li>
                </ul>
            </div>
        </section>
    </main>


</main>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .map-container {
            width: 100%;
            height: 600px;
            border: 2px solid #ccc;
            border-radius: 8px;
            overflow: hidden;
        }

            .map-container iframe {
                width: 100%;
                height: 100%;
                border: none;
            }
    </style>
</head>
<body>
    <header>
        <h1>@ViewBag.Title</h1>
    </header>
    <main aria-labelledby="title">
        <div class="map-container">
            @*<iframe src="path/to/your/map/file.html" title="Map"></iframe>*@
        </div>
        <p>For map page</p>
    </main>
</body>
</html>

<script>
    document.getElementById('test').addEventListener('click', function () {
        $.ajax({
            url: '/QuestionsAPI/GetRandomData',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                console.log(data);
                sessionStorage.setItem('QuestionJson', JSON.stringify(data));
                window.location.href = '/Home/cardGame';
            },
            error: function (error) {
                console.error('Error fetching data:', error);
            }
        });
    });
</script>

<!-- logic of video playing -->
<script>
    document.getElementById("videoContainer").addEventListener("click", function () {
        var video = document.getElementById("videoPlayer");
        if (video.paused) {
            video.play();
        } else {
            video.pause();
        }
    });
</script>