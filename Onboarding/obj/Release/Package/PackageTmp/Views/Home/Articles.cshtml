    <style>
        /* Styles for the card container */
        .card-container {
            display: flex;
            justify-content: center;
            margin-top: 500px;
        }

        /* Styles for the card */
        #img-card .card {
            margin: 100px;
            overflow: hidden;
            perspective: 1000px;
            cursor: pointer;
            position: relative;
            transition: transform 0.5s;
        }

            /* Hover effect for the card */
            #img-card .card:hover {
                transform: scale(1.25);
                z-index: 1;
            }

            /* Styles for card images */
            #img-card .card img {
                width: 100%;
                height: 100%;
            }

            /* Styles for the back face of the card */
            #img-card .card .back {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                backface-visibility: hidden;
                transform: rotateY(180deg);
            }

            /* Flipping animation for the card */
            #img-card .card.flipped .front {
                transform: rotateY(180deg);
            }

            /* Flipping animation for the card */
            #img-card .card.flipped .back {
                transform: rotateY(0deg);
            }

        /* Styles for the articles container */
        #articles.card a {
            text-align: left;
            font-size: 12px;
            font-family: Arial;
            font-weight: 500;
            line-height: 5;
        }

        /* Styles for the auto zoom container */
        #auto-zoom-container {
            width: 200px;
            height: 50px;
            overflow: hidden;
        }

        /* Styles for the auto zoom text */
        #auto-zoom {
            font-weight: bolder;
            font-size: 20px;
            transition: font-size 0.3s ease-in-out;
            cursor: pointer;
        }

    </style>
</head>
