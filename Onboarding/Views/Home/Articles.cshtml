    <!-- JavaScript code -->
    <script>
        // JavaScript code for flipping the cards
        document.querySelectorAll('#img-card .card').forEach(card => {
            card.addEventListener('click', () => {
                card.classList.toggle('flipped');
            });
        });

        // JavaScript code for auto-zoom feature
        const element = document.getElementById('auto-zoom');
        let fontSize = 20;

        function zoom() {
            // Toggle font size between 20px and 25px
            fontSize = fontSize === 20 ? 25 : 20;
            // Apply font size to the element
            element.style.fontSize = fontSize + 'px';
            // Call the zoom function recursively with a delay of 300 milliseconds
            setTimeout(zoom, 300);
        }

        // Call the zoom function initially
        zoom();
    </script>


