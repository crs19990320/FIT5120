@{
    ViewBag.Title = "Index";
}

<main>
    <!-- Calculator on right corner -->
    <a href="/Home/Calculator">
        <div class="card" style="position: fixed; top: 20px; right: 20px; width: 400px; background-color: rgba(255, 255, 255, 0.8); overflow: hidden;" id="card1">
            <div class="card-body">
                <img src="https://cdn-icons-png.flaticon.com/512/8841/8841452.png" alt="Calculator Icon" style="float: left; margin-right: 10px; max-width: 50px; max-height: 50px;">
                <h5 class="card-title">New Sunscreen Calculator</h5>
                <p class="card-text">Want to know how much Sunscreen you need to apply?</p>
            </div>
        </div>
    </a>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">
            <img src="~/imagine/Logo.jpg" alt="Sample Picture" style="float: left; margin-right: 10px;" width="120" height="120">
            UV is HARMFUL to your skin!
        </h1>
    </section>

    <div class="row">
        <div class="col-md-6">
            <div class="card" style="text-align: center; height: 250px; background-color: @ViewBag.Color;">
                <div class="card-body">
                    <p style="font-size: 20px;">UV index</p>
                        <h2 id="uvindex" style="font-size: 100px; font-weight: bold;">@ViewBag.Message</h2>
                        <div style="position: absolute; bottom: 0; right: 0; width: 150px; height: 120px;">
                            <a href="/Home/MoreInfo" style="display: block; width: 100%; height: 100%;">
                                <img src="~/imagine/moreinfo.gif" style="width: 100%; height: 100%;" type="image/gif">
                            </a>
                        </div>
                </div>
            </div>
            <div class="card" style="text-align: center; background-color: rgb(14, 17, 169, 0.70);">
                <div class="card-body p-0" style="text-align: center; height: 250px;">
                    <img src="~/imagine/uv_index.png" style="width: 100%; height: 100%; object-fit: cover; opacity: 1;">
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-0" style="background-color: rgba(255, 255, 255,0.3);">
                <div class="card-body" style="text-align: center; height: 500px;">  
                    <p style="font-size: 40px;  font-family: 'Kristen ITC'; font-weight: bold ">TIPS</p>
                    <h2 style="font-size: 25px; text-align: left;  font-family: 'Kristen ITC' ">@Html.Raw(ViewBag.Tips.Replace("\n", "<br>"))</h2>
                </div>
            </div>
        </div>
    </div>
</main>


