@{
    ViewBag.Title = "Map";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Progress</title>

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@600&family=Lobster+Two:wght@700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    <style>
        .map-container {
            width: 1500px;
            height: 970px;
            border: none;
            overflow: auto;
            float: left;
        }

        .map-container iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

        .back-to-home {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: transparent;
            border: none;
            cursor: pointer;
            z-index: 1000;
        }

        .back-to-home img {
            width: 80px;
            height: auto;
        }

        .card {
            width: 13%;
            top: 20px;
            right: 1150px;
            position: absolute;
            border: none;
            height: auto;
            background-color: rgba(255, 255, 255, 0.5);
        }

    </style>
</head>
<body>
    <button class="back-to-home" onclick="goToIndex()">
        <img src="~/Media/homebutton.png" alt="Home">
    </button>

    <div class="card">
        <img src="~/Media/scale_water.png" alt="water" />
        <img src="~/Media/scale_gas.png" alt="gas" />
        @*<img src="~/Media/scale_temp.png" alt="temp" />*@
    </div>

    <div class="map-container">
        <iframe src="~/d3_project/map.html" title="Map"></iframe>
    </div>

    <script>
        function goToIndex() {
            window.location.href = "Dashboard";
        }
    </script>

    <script>
        var jsonData = @Html.Raw(Json.Encode(Model));
        sessionStorage.setItem('MapModelJson', JSON.stringify(jsonData));
    </script>
</body>
</html>