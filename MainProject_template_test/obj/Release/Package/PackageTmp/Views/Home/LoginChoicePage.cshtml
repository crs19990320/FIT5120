
@{
    ViewBag.Title = "LoginChoicePage";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login Choice</title>
    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@600&family=Lobster+Two:wght@700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    @*Template Stylesheet*@
    <link href="~/css/style.css" rel="stylesheet">
    <style>
        html, body {
            overflow:hidden;
        }
        .navbar-nav .nav-link {
            position: relative;
            transition: color 0.5s, border-bottom 0.5s;
            margin-right: 20px;
            z-index:20;
        }

            .navbar-nav .nav-link:hover {
                color: orangered;
            }

            .navbar-nav .nav-link::after {
                content: '';
                position: absolute;
                left: 0;
                bottom: 2px;
                width: 100%;
                height: 2px;
                background-color: orangered;
                transition: width 0.5s;
                transform: scaleX(0);
                transform-origin: left;
                z-index: 20;
            }

            .navbar-nav .nav-link:hover::after {
                transform: scaleX(1);
            }
    </style>
</head>
<body style="background-image: url('../../media/page_background4.png'); background-size: cover;">
    <div style="display: flex; align-items: center;">
        <h1 style="text-align: left; margin-bottom: 20px; flex: 1; font-family: 'Lobster Two', cursive;">
            
        </h1>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style=" font-size: 25px;width:550px">
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-brown" href="@Url.Action("Dashboard", "Home")" style="font-size:25px;font-weight: bolder;color:black">
                            <img src="~/Media/Dashboard_Kids.png" alt="Family Icon" style="width: 120px; height: 70px; margin-right: -23px;">
                            DashBoard
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div style="position: absolute; background-image: url(../../Media/login_window1.png); background-position: center; background-size: cover; width: 1400px; height: 700px; top: 150px; margin-left: -50px; ">
        <button id=" registerbutton" style="position: absolute; width: 350px; height: 100px; border-radius: 70px; background-color: darkgreen; left: 530px; top: 160px; color: ghostwhite; border-width: 0px; font-size: 50px; font-weight: bolder; " onclick="gotoRegister()">SIGN UP</button>
        <button id=" loginButton" style="position: absolute; width: 350px; height: 100px; border-radius: 70px; background-color: greenyellow; left: 530px; top: 300px; border-width: 0px; font-size: 50px; font-weight: bolder; " onclick="gotoLogin()">LOGIN</button>
    </div>
    <script>
        function gotoRegister() {
            window.location.href = 'register';
        }
        function gotoLogin() {
            window.location.href = 'Login';
        }
    </script>
</body>
</html>

