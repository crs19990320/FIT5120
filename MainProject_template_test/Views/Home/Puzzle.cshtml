    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var taskStatusString = sessionStorage.getItem('checkListData');
            var taskStatus = taskStatusString ? JSON.parse(taskStatusString) : {};
            var infoBox = document.getElementById('infoBox');
            var infoText = document.getElementById('infoText');

            if (Object.keys(taskStatus).length > 0) {
                var tasks = Object.keys(taskStatus);

                tasks.forEach(task => {
                    const taskIndex = task.replace('task', '');
                    const ellipseId = `e${taskIndex}`;
                    const puzzleid = `pi${taskIndex}`;
                    const ellipse = document.getElementById(ellipseId);
                    const puzzlepi = document.getElementById(puzzleid);

                    if (ellipse) {
                        switch (taskIndex) {
                            case '1': ellipse.setAttribute('fill', 'rgb(231, 76, 60)'); break;
                            case '2': ellipse.setAttribute('fill', 'rgb(230, 126, 34)'); break;
                            case '3': ellipse.setAttribute('fill', 'rgb(241, 196, 15)'); break;
                            case '4': ellipse.setAttribute('fill', 'rgb(46, 204, 113)'); break;
                            case '5': ellipse.setAttribute('fill', 'rgb(52, 152, 219)'); break;
                            case '6': ellipse.setAttribute('fill', 'rgb(240, 128, 128)'); break;
                           // case '7': ellipse.setAttribute('fill', 'rgb(142, 68, 173)'); break;
                        }

                        ellipse.addEventListener('mouseenter', function () {
                            infoText.textContent = taskStatus[task];
                            infoBox.style.display = 'flex';
                        });

                        ellipse.addEventListener('mouseleave', function () {
                            infoBox.style.display = 'none';
                        });
                    }

                    if (taskIndex != '6' && taskIndex != '7') {
                        puzzlepi.setAttribute('fill', 'transparent');
                    }
                    else if (taskIndex == '6') {
                        puzzlepi.setAttribute('fill', 'transparent');
                        const puzzlepiBonus = document.getElementById("pi7");
                        puzzlepiBonus.setAttribute('fill', 'transparent');
                    }
                });
            } else {
                console.log("No data to process.");
            }
        });
    </script>
