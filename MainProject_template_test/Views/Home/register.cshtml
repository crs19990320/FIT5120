            <div class="recarousel__slide">
                <div style="position: absolute; width: 1050px; height: 300px; left: 2750px; ">
                    <img src="../Media/whale1.png" alt="img1" style="position: relative; width: 100px; height: 100px; margin-top: 100px; margin-left: 50px; " onmouseover="enlargeAndToFront(this)" onmouseout="resetImageSize(this)" onclick="imageClicked(this)">
                    <img src="../Media/tiger1.png" alt="img2" style="position: relative; width: 100px; height: 100px; margin-top: 100px; " onmouseover="enlargeAndToFront(this)" onmouseout="resetImageSize(this)" onclick="imageClicked(this)">
                    <img src="../Media/squirrel1.png" alt="img3" style="position: relative; width: 100px; height: 100px; margin-top: 100px; " onmouseover="enlargeAndToFront(this)" onmouseout="resetImageSize(this)" onclick="imageClicked(this)">
