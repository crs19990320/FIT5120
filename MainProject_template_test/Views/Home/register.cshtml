                    <img src="../Media/raccoon1.png" alt="img5" style="position: relative; width: 100px; height: 100px; margin-top: 100px; " onmouseover="enlargeAndToFront(this)" onmouseout="resetImageSize(this)" onclick="imageClicked(this)">
                    <img src="../Media/pig1.png" alt="img6" style="position: relative; width: 100px; height: 100px; margin-top: 100px; " onmouseover="enlargeAndToFront(this)" onmouseout="resetImageSize(this)" onclick="imageClicked(this)">
                    <img src="../Media/frog1.png" alt="img7" style="position: relative; width: 100px; height: 100px; margin-top: 100px; " onmouseover="enlargeAndToFront(this)" onmouseout="resetImageSize(this)" onclick="imageClicked(this)">
                    <img src="../Media/fox1.png" alt="img8" style="position: relative; width: 100px; height: 100px; margin-top: 100px; " onmouseover="enlargeAndToFront(this)" onmouseout="resetImageSize(this)" onclick="imageClicked(this)">
                    <img src="../Media/cat1.png" alt="img9" style="position: relative; width: 100px; height: 100px; margin-top: 100px; " onmouseover="enlargeAndToFront(this)" onmouseout="resetImageSize(this)" onclick="imageClicked(this)">
                </div>
            </div>
        </div>
        <button class="recarousel__button--next">Next</button>
    </div>


    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const slides = document.querySelectorAll('.recarousel__slide');
            const prevButton = document.querySelector('.recarousel__button--prev');
            const nextButton = document.querySelector('.recarousel__button--next');
            let currentIndex = 0;

            function updateCarousel() {
                const newTransformValue = -100 * currentIndex;
                document.querySelector('.recarousel__slides').style.transform = `translateX(${newTransformValue}%)`;
            }

            prevButton.addEventListener('click', function () {
                if (currentIndex > 0) {
                    currentIndex--;
                    updateCarousel();
                }
            });

            nextButton.addEventListener('click', function () {
                if (currentIndex < slides.length - 1) {
                    currentIndex++;
                    updateCarousel();
                }
            });
        });
    </script>
