        var fillstring = "";
        switch (color) {
            case 'Red': fillstring = '#E74C3C'; break;
            case 'Purple': fillstring = '#9B59B6'; break;
            case 'Green': fillstring = '#82E0AA'; break;
            case 'Orange': fillstring = '#EB984E'; break;
            case 'Pink': fillstring = '#F89DF0'; break;
            case 'Blue': fillstring = '#5DADE2'; break;
            case 'Navy': fillstring = '#1C298A'; break;
            case 'Grey': fillstring = '#D1D3DB'; break;
            case 'Yellow': fillstring = '#F4D03F'; break;
        }
        document.getElementById('showSVG').setAttribute('fill', fillstring);
        var tempsrc = "../Media/" + animal + ".png";
        document.getElementById('animalusername').src = tempsrc;
        document.getElementById('userid').textContent = "#" + colornanimal[1].split('#')[1];
        document.getElementById('boardSVGU').setAttribute('fill', fillstring);
        document.getElementById('boardanimalU').src = tempsrc;
        document.getElementById('namewithouidU').textContent = username.split('#')[0];
        
    </script>
    <script>
        var taskStatuses = {
            CTASK1: JSON.parse(sessionStorage.getItem('CTASK1') || '{}'),
            CTASK2: JSON.parse(sessionStorage.getItem('CTASK2') || '{}'),
            CTASK3: JSON.parse(sessionStorage.getItem('CTASK3') || '{}'),
            CTASK4: JSON.parse(sessionStorage.getItem('CTASK4') || '{}'),
            CTASK5: JSON.parse(sessionStorage.getItem('CTASK5') || '{}'),
            CTASK6: JSON.parse(sessionStorage.getItem('CTASK6') || '{}')
        };
        var CTASKCOUNT = 0;
        var VTASKCOUNT = 0;
        

        Object.keys(taskStatuses).forEach(task => {
            var taskData = taskStatuses[task];
            if (taskData != null) {
                var numberOfKeys = Object.keys(taskData).length;
                CTASKCOUNT += numberOfKeys;
                
            }
            
        });
    </script>
    <script>
        var VTaskstatuses = JSON.parse(sessionStorage.getItem('VIDEOTASK') || '{}');
        if (VTaskstatuses != null) {
            var numberOfKeys = Object.keys(VTaskstatuses).length;
            VTASKCOUNT += numberOfKeys;
        }
        
    </script>

    <script>
        function updateProgressBar(current, total) {
            let progressBar = document.getElementById('progress-bar');
            let progressText = document.getElementById('progress-text');
            let percentage = (current / total) * 100;
            progressBar.style.width = percentage + '%';
            progressText.textContent = current + ' / ' + total;
        }

        var currentWeek = sessionStorage.getItem('currentWeek');
        var weekNumber = currentWeek.replace("week", '');
        var totalCTasks = 6 * parseInt(weekNumber);
        updateProgressBar(CTASKCOUNT, totalCTasks);
    </script>
    <script>
        function updateViProgressBar(current, total) {
            let progressBar = document.getElementById('Viprogress-bar');
            let progressText = document.getElementById('Viprogress-text');
            let percentage = (current / total) * 100;
            progressBar.style.width = percentage + '%';
            progressText.textContent = current + ' / ' + total;
        }

        var totalViTasks = parseInt(weekNumber);
        updateViProgressBar(VTASKCOUNT, totalViTasks);
    </script>
    <script>
        var numberWithCommas = function (x) {
            return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        };

    </script>
    
